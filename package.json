{
  "name": "sloctavi-backend",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "swc src --out-dir dist --config-file .swcrc && tsc-alias && powershell Copy-Item -Path package.json -Destination dist/",
    "build:linux": "swc src --out-dir dist --config-file .swcrc && tsc-alias && cp package.json dist/",
    "migrate": "drizzle-kit push",
    "start:worker:email": "tsx src/scripts/worker-manager.ts start",
    "stop:worker:email": "tsx src/scripts/worker-manager.ts stop",
    "restart:worker:email": "tsx src/scripts/worker-manager.ts restart",
    "render:deploy": "render deploy",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:worker:start": "pm2 start dist/src/scripts/worker-manager.js --name sloctavi-backend-worker --watch --args start",
    "pm2:worker:stop": "pm2 stop sloctavi-backend-worker",
    "pm2:worker:restart": "pm2 restart sloctavi-backend-worker",
    "pm2:worker:logs": "pm2 logs sloctavi-backend-worker"
  },
  "dependencies": {
    "@bull-board/api": "^6.10.1",
    "@bull-board/hono": "^6.10.1",
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.1.6",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.5.0",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.5.184",
    "@supabase/supabase-js": "^2.49.8",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.53.1",
    "commander": "^14.0.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.7.4",
    "hono-pino": "^0.7.2",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.6.1",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "stoker": "1.4.2",
    "ws": "^8.18.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.7",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.2",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.22.0",
    "eslint-plugin-format": "^0.1.3",
    "pm2": "^5.4.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "undici": "^7.10.0",
    "vitest": "^2.1.9"
  }
}
