{
  "name": "sloctavi-backend",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "swc src --out-dir dist --config-file .swcrc && tsc-alias && powershell Copy-Item -Path package.json -Destination dist/",
    "build:linux": "swc src --out-dir dist --config-file .swcrc && tsc-alias && cp package.json dist/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:seed": "tsx src/db/manual-seed.ts",
    "test:openapi": "tsx src/scripts/test-openapi.ts",
    "test:deps": "tsx src/scripts/verify-dependencies.ts",
    "start:worker:email": "tsx src/scripts/worker-manager.ts start",
    "stop:worker:email": "tsx src/scripts/worker-manager.ts stop",
    "restart:worker:email": "tsx src/scripts/worker-manager.ts restart",
    "render:deploy": "render deploy",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:worker:start": "pm2 start dist/src/scripts/worker-manager.js --name sloctavi-backend-worker --watch --args start",
    "pm2:worker:stop": "pm2 stop sloctavi-backend-worker",
    "pm2:worker:restart": "pm2 restart sloctavi-backend-worker",
    "pm2:worker:logs": "pm2 logs sloctavi-backend-worker"
  },
  "dependencies": {
    "@bull-board/api": "^6.11.2",
    "@bull-board/hono": "^6.11.2",
    "@hono/node-server": "^1.17.1",
    "@hono/node-ws": "^1.2.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.2",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.5.184",
    "@supabase/supabase-js": "^2.52.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.2",
    "bullmq": "^5.56.5",
    "commander": "^14.0.0",
    "dotenv": "^16.6.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.5",
    "hono-pino": "^0.7.2",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.6.1",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "stoker": "1.4.3",
    "ws": "^8.18.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.2",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.16.5",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^0.1.3",
    "globals": "^16.3.0",
    "pm2": "^5.4.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "undici": "^7.12.0",
    "vitest": "^2.1.9"
  }
}
